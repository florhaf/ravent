<script type="text/javascript">
  $(function() {
    $("#getmail").submit(function () {
      var e = $("#email").val();
      if (e && e.length > 0 && e != 'Insert your e-mail') {
        var data = "email=" + e;
        $.get("/download/register_email?" + data);
        $.get("/discover_circle/register_email?" + data);
        $("#email_form").fadeOut("fast", function() {
          $("#email_form").html($("#after_email").html());
          $("#email_form").fadeIn("slow");
        });
      }
      return false;
    });
  });
</script>
